<%- include('../layout', { body: ` <div class="page-header">
    <h2>üìã ${esEdicion ? 'Editar' : 'Nuevo'} Art√≠culo</h2>
    </div>

    ${typeof error !== 'undefined' && error ? '<div class="alerta alerta-error">‚õî ' + error + '</div>' : ''}

